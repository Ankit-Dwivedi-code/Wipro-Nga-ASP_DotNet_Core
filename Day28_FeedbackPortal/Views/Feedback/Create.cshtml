@* @model Day28_FeedbackPortal.Models.Feedback

@{
    ViewData["Title"] = "Submit Feedback (HTML Helpers)";
}

<h2>Submit Feedback (HTML Helpers)</h2>

@using (Html.BeginForm("Create", "Feedback", FormMethod.Post))
{
    <div>
        <label>Name:</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter your name" })
    </div>

    <div>
        <label>Email:</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Enter your email" })
    </div>

    <div>
        <label>Rating:</label>
        @Html.DropDownListFor(m => m.Rating,
            new SelectList(new[]
            {
                new { Value = "1", Text = "1 - Poor" },
                new { Value = "2", Text = "2" },
                new { Value = "3", Text = "3 - Average" },
                new { Value = "4", Text = "4" },
                new { Value = "5", Text = "5 - Excellent" }
            }, "Value", "Text"),
            "-- Select Rating --",
            new { @class = "form-control" })
    </div>

    <div>
        <label>Comments:</label>
        @Html.TextAreaFor(m => m.Comments, new { @class = "form-control", rows = 3, placeholder = "Enter comments" })
    </div>

    <button type="submit">Submit</button>
}

